WindowManager:
    MainWindow:
    offlineScreen:
    onlineScreen:
    cardScreen


<loadPop>:
    Image:
        source: "loading.zip"
        size_hint: .7,.7
        pos_hint:{"x":.15,"top":.85}
<camera>:


    Button:
        text: "Capture"
        pos_hint:{"x":.2,"top":.2}
        size_hint:.6,.2

<userInput>:

    cardName:cardName
    cardDesc:cardDesc


    cols:1

    GridLayout:
        cols:2
        Label:
            text:"Card Name"

        TextInput:
            id:cardName
            multiline:False

        Label:
            text:"Card Description"

        TextInput:
            id:cardDesc
            multiline:True

    Button:
        text:"Confirm"



<MainWindow>:
    name:"main"
    FloatLayout:

        Label:
            text: "Welcome to the MTG Card Generator!"
            size_hint: .6,.2
            pos_hint: {"x":.2,"top":1}

        Label:
            text: "AI project @ GGC"
            size_hint:.6,.2
            pos_hint:{"x":.2,"top":.9}


        Button:
            id:onlineButton
            text: "Online Mode"
            size_hint:.45,.15
            pos_hint:{"x":.3,"top":.6}
            on_release:
                root.manager.transition.direction="left"
                app.root.current = "online"

        Button:
            id:offlineButton
            text: "Offline Mode"
            size_hint:.45,.15
            pos_hint:{"x":.3,"top":.4}
            on_release:
                root.manager.transition.direction="left"
                app.root.current = "offline"


<onlineScreen>:
    name:"online"

    FloatLayout:



        Button:

            text:"Back"
            size_hint: .07,.07
            pos_hint: {"x":0,"top":1}
            on_release:
                root.manager.transition.direction="right"
                app.root.current = "main"


        Label:
            text: "First please input the http ip addresses from runway"
            pos_hint:{"x":.2,"top":1.0}
            size_hint:.6,.2


        Button:
            id:onlCameraButton
            text: "Image Capture"
            size_hint: .2,.2
            pos_hint: {"x":.2,"top":.8}
            on_release:
                onlCameraButton.background_color= 1,0,0,.8
                if ipIn.text != "" and ipOut.text != "": \
                onlCameraButton.background_color = 0,1,1,.9; \
                root.show_popup();



        Button:
            id:onlUserButton
            text:"User Input"
            size_hint: .2,.2
            pos_hint: {"x":.6,"top":.8}
            on_release:
                onlUserButton.background_color=1,0,0,.8
                if ipIn.text != "" and ipOut.text != "": \
                onlUserButton.background_color=0,1,1,.9; \
                root.userInp();








        Label:
            text:"Receiving IP"
            pos_hint:{"x":0,"top":.5}
            size_hint:.6,.2


        Label:
            text:"Sending IP"
            pos_hint:{"x":0,"top":.6}
            size_hint:.6,.2



        TextInput:
            id:ipIn
            multiline: False
            pos_hint:{"x":.4,"top":.53}
            size_hint:.4,.06


        TextInput:
            id:ipOut
            multiline: False
            pos_hint:{"x":.4,"top":.43}
            size_hint:.4,.06




<offlineScreen>:
    name:"offline"
    offSubmit:offSubmit
    FloatLayout:


        Button:
            text:"Back"
            size_hint: .07,.07
            pos_hint: {"x":0,"top":1}
            on_release:
                root.manager.transition.direction="right"
                app.root.current = "main"


        Button:
            id:cameraButton
            text: "Image Capture"
            size_hint: .2,.2
            pos_hint: {"x":.2,"top":.8}
            on_release:
                cameraButton.background_color= 1,.6,0,1
                root.cameraPop()


        Button:
            id:userButton
            text:"User Input"
            size_hint: .2,.2
            pos_hint: {"x":.6,"top":.8}
            on_release:
                userButton.background_color=1,.6,0,1
                root.userInp()


        Button:
            id:offSubmit
            text:"Submit and Run"
            size_hint:.2,.2
            pos_hint:{"x":.4,"top":.2}
            on_release:
                if offSubmit.text == "Submit and Run": root.offRun()
                else: app.root.current = "card"


<cardScreen>:
    name:"card"
    FloatLayout:

        Image:
            source: "assets/blue_card.jpg"
            size_hint: .5,.8
            pos_hint: {"x":.2,"top":.8}














